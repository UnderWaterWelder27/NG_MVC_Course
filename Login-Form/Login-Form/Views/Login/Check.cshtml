@model Login_Form.Models.UserModel
@{
    Layout = null;
}
<!DOCTYPE html>   
<html>   
    <head>  
        <meta name="viewport" content="width=device-width, initial-scale=1">  
        <title> Login Page </title>  
        <style>
            body {
                background-color: rgb(255, 97, 109);
                font-family: Calibri, Helvetica, sans-serif;
            }
            h1, h2{
                color: rgb(255, 234, 201);
                font-size: 64px;
                text-align: center;
            }
            .wrong-form {
                margin: 10px;
                padding: 25px;
            }
            h2 {
                font-size: 32px;
            }
            .login-link {
                text-align: center;
            }
            a:link, a:visited, a:active {
                color: rgb(255, 234, 201);
                background-color: rgb(255, 97, 109);
                font-size: 32px;
                width: 100%;
                padding: 15px;
                margin: 1px;
                text-decoration: none;
            }
            a:hover {
                background-color: rgb(102, 222, 147);
            }
        </style>
    </head>
    <body>
        @if (Model.IsLogged)
        {
            @if (Model.IsAdmin)
            {
                <h1>@Model.Username is Admin</h1>
            }
            else
            {
                <h1>@Model.Username is User</h1>
            }
            <div class="login-link">
                <a href="@Url.Action("Index")">Login page</a>
            </div>
        }
        else
        {
        <div class="wrong-form">
            <h1>Wrong</h1>
            <h2>return back to </h2>
            <div class="login-link">
                <a href="@Url.Action("Index")">Login page</a>
            </div>
        </div>  
        }
    </body>
</html>


